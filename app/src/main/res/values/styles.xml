<resources>

    <!-- Base application theme. -->
    <style name="LinkMe" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="text_24_white">
        <item name="android:fontFamily">@font/ng_regular</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_20_black">
        <item name="android:fontFamily">@font/ng_regular</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoadingDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="TextDefault" parent="@android:style/TextAppearance">
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextContent" parent="TextDefault">
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/font_32_dp</item>
    </style>

    <style name="TextHeader" parent="TextDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/font_40_dp</item>
    </style>

    <style name="EditTextBoxLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inputbox_height</item>
        <item name="android:minHeight">@dimen/inputbox_height</item>
        <item name="android:layout_marginTop">@dimen/size_6</item>
        <item name="android:layout_marginBottom">@dimen/size_6</item>
        <item name="android:layout_marginLeft">@dimen/size_30</item>
        <item name="android:layout_marginRight">@dimen/size_30</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:background">@drawable/inputbox_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/inputbox_font_size</item>
        <item name="android:textColorHint">@color/text_content_hint</item>
    </style>

    <style name="ButtonLBottomLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bottm_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textColor">@color/btn_text_vp</item>
        <item name="android:textSize">@dimen/font_34_dp</item>
    </style>

    <style name="CheckBoxHce">
        <item name="android:layout_height">@dimen/checkbox_height</item>
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:textColor">@color/text_checkbox</item>
        <item name="android:textSize">@dimen/font_32_dp</item>
    </style>

    <style name="CheckBoxALL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_text_vp</item>
        <item name="android:textSize">@dimen/inputbox_font_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:clickable">false</item>
        <item name="android:drawableLeft">@drawable/hce_i_allchk</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TermsBoxLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RoundButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/roundbottm_button_height</item>
        <item name="android:layout_marginLeft">@dimen/size_60</item>
        <item name="android:layout_marginRight">@dimen/size_60</item>
    </style>

    <style name="InputBoxLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inputbox_height</item>
        <item name="android:minHeight">@dimen/inputbox_height</item>
        <item name="android:layout_marginTop">@dimen/size_6</item>
        <item name="android:layout_marginBottom">@dimen/size_6</item>
        <item name="android:layout_marginLeft">@dimen/size_30</item>
        <item name="android:layout_marginRight">@dimen/size_30</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:background">@drawable/inputbox_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/btn_text_vp</item>
        <item name="android:textSize">@dimen/font_32_dp</item>
    </style>
</resources>
